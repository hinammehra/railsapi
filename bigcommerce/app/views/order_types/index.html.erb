<p id="notice"><%= notice %></p>

<h1>Listing Order Types</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price Factor</th>
      <th>WET</th>
      <th>GST</th>
      <th>Based-price Deduction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_types.each do |order_type| %>
      <tr>
        <td><%= order_type.name %></td>
        <td><%= order_type.description %></td>
        <td><%= order_type.item_price_factor %></td>
        <td><%= order_type.item_wet %></td>
        <td><%= order_type.item_gst %></td>
        <td><%= order_type.based_price_deduction %></td>
        <td><%= link_to 'Show', order_type %></td>
        <td><%= link_to 'Edit', edit_order_type_path(order_type) %></td>
        <td><%= link_to 'Destroy', order_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


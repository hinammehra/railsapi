<br/><br/>
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="account-wall">
                <%= form_tag({:action => 'password_update'}, {:class => 'form-signin'}) do %>
                <%= text_field_tag :username, nil, class: 'form-control', placeholder: 'Username' %><br/>
                <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Old Password'  %>
                <%= password_field_tag :new_password, nil, class: 'form-control', placeholder: 'New Password'  %>
                <%= password_field_tag :new_password_confirmation, nil, class: 'form-control', placeholder: 'New Password Confirmation'  %>
                <%= submit_tag "Update", class: 'button login' %>
                <% end %>
            </div>
        </div>
    </div>
</div>

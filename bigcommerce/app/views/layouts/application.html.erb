<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? content_for(:title) : "Untapped" %></title>
  <%= stylesheet_link_tag    'vendor',      media: 'all', debug: false %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'vendor', debug: false %>
  <%= javascript_include_tag 'application' %>
</head>
<body>

<nav class="navbar navbar-default">
  <div class="container-fluid" align="center">
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="dropdown">
        <a class="" data-toggle="dropdown" href="#">Sales Summaries
        <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><%= link_to "Weekly", controller: "sales", action: "sales_dashboard" %></li>
          <li><%= link_to "Detailed", controller: "sales", action: "sales_dashboard_detailed" %></li>
        </ul>
        <li><%= link_to "Orders", controller: "models", action: "orders" %></li>
        <li><%= link_to "Customers", controller: "models", action: "customers" %></li>
        <li><%= link_to "Products", controller: "models", action: "products" %></li>
        <li><%= link_to "Pending Orders", controller: "sales", action: "orders_and_products_for_selected_status", status_id: 1, status_name: "Pending" %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Hi," + "  " + session[:username] %></li>
        <li><%= link_to "Logout", controller: "access", action: "logout" %></li>
      </ul>
    </div>
  </div>
</nav>

<%= yield %>

</body>
</html>

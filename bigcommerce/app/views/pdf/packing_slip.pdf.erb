<meta http-equiv="content-type" content="text/html; charset=utf-8"/>

<div class="Invoice">
  <div id="heading">
    <div id="Logo">
      <b>Packing Slip</b>
      <h1 style="margin-bottom: 0px;padding-right: 2px;">Untapped Fine Wines</h1><br/>
    </div>
    <table id="invoiceDets">
      <tr>
        <td>
          <b>Invoice No</b>
        </td>
        <td>
          <b><%= order.id %></b>
        </td>
      </tr>
      <tr>
        <td>Date</td>
        <td id="dateRef" class="term_date"><%= order.created_at.strftime("%e/%m/%Y") %></td>
      </tr>
    </table>
  </div>

  <div id="customerDetails">
    <i>Bill To:</i><br/>
    <h3 style="margin-bottom: 0px;padding-right: 5px;"><%= customer.actual_name%></h3>
    <%= customer.street%><br/>
    <%= customer.city%>,
    <%= customer.state%>
    <%= customer.postcode%><br/>
    <%= customer.country%><br/>
  </div>

  <div style="margin-top: -200px;">
    <%= render 'pdf/product_lists', order: order %>
  </div>

  <div class="InvoiceComments" style="%%GLOBAL_HideComments%%; font-size: 0.8em;width: 350px; text-align: justify;">
    <div class="InvoiceHeading" style="font-size: .9em;">Customer Notes</div>
    <% order.customer_notes.split(/\n/).each do |note| %>
      <%= note %> <br/>
    <% end %>
  </div>
  <div class="InvoiceComments" style="%%GLOBAL_HideComments%%; font-size: 0.8em;width: 350px; text-align: justify;">
    <div class="InvoiceHeading" style="font-size: .9em;">Staff Notes</div>
    <% order.staff_notes.split(/\n/).each do |note| %>
      <%= note %><br/>
    <% end %>
  </div>
  <div class="row" align="right" style=" position: fixed; bottom: 0; width: 100%;">
    <table>
      <tr>
        <th>Acceptance:</th>
        <th>____________________</th>
        <th>____________________</th>
        <th>__________________________</th>
      </tr>
      <tr>
        <td></td>
        <td>Name</td>
        <td>Sign</td>
        <td>Date</td>
      </tr>
    </table>
  </div>
</div>

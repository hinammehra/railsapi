<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<%= wicked_pdf_stylesheet_link_tag('bootstrap') %>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
<link rel="stylesheet" href="https://www.untappedwines.com.au/template/Styles/printinvoice.css" type="text/css">


<% consignment = item.consignment %>
<% items = consignment.items %>

<div class="container">
  <div class="row">
    <div id="Logo" class="col-xs-6">
      <%= wicked_pdf_image_tag "email_signature.png", class: 'profile-img' %>
    </div>
    <div class="col-xs-6">
      <%= wicked_pdf_image_tag "Fastway_logo.png", style: "float: right;margin-top:-20px;margin-right:5px;" %>
    </div>
  </div>
  <div class="row" style="margin-top: -35px;">
    <div class="col-xs-6">
      <h3>Proof of Delivery</h3>
    </div>
    <div class="col-xs-6">
      <h3><%= order.customer.actual_name %></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6"  style="font-size: 9px;">
      <%= label(:invoice, 'Invoice:')%> <%= item.Reference %><br/>
      <label>Package(s) Sent:</label><%= items.sum('Packaging') %><br/>
      <label>Bottles in Order:</label><%= order.qty %><br/>
    </div>
    <div class="col-xs-6"  style="font-size: 9px;">
      <div class="row">
        <div class="col-xs-4" style="align: right;">
          <%= label(:labels, 'Label(s) Sent: ')%>
        </div>
        <% items.each do |package|%>
          <div class="col-xs-4" style="font-size: 9px; align: right;">
            <%= package.LabelNumber %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <br/>
  <div class="row">
    <div class="col-xs-4" style="font-size: 9px;">
      <%= label(:invoice, 'Invoice:')%> <%= item.Reference %><br/>
      <label>Label Printed:</label> <%= Time.now().to_s(:db)%><br/>
    </div>
    <div class="col-xs-8" style="font-size: 9px;">
      <p align="right">Label was distributed from: <%= label(:melbourne, 'Melbounre')%></p>
      <table align="right">
        <tr align="right" style="font-size: 9px;">
          <td style="font-size: 9px;"><%= label(:to, 'To:')%></td>
          <td style="font-size: 9px;"><%= consignment.CompanyName%></td>
        </tr>
        <tr align="right" style="font-size: 9px;">
          <td style="font-size: 9px;"><%= label(:Address1, 'Address1:')%></td>
          <td style="font-size: 9px;"><%= consignment.Address1%></td>
        </tr>
        <% unless consignment.Address2 == ''%>
          <tr align="right" style="font-size: 9px;">
            <td style="font-size: 9px;"><%= label(:Address2, 'Address2:')%></td>
            <td style="font-size: 9px;"><%= consignment.Address2%></td>
          </tr>
        <% end %>
        <tr align="right" style="font-size: 9px;">
          <td style="font-size: 9px;"><%= label(:city, 'Town:')%></td>
          <td style="font-size: 9px;"><%= consignment.City%></td>
        </tr>
        <tr align="right" style="font-size: 9px;">
          <td style="font-size: 9px;"><%= label(:postcode, 'Postcode:')%></td>
          <td style="font-size: 9px;"><%= consignment.PostCode%></td>
        </tr>
        <% unless consignment.SpecialInstruction1 == ''%>
          <tr align="right" style="font-size: 9px;">
            <td rowspan="3" style="font-size: 9px;"><label>Special Instruction:</label></td>
            <td style="font-size: 9px;"><%= consignment.SpecialInstruction1%></td>
          </tr>
        <% end %>
        <% unless consignment.SpecialInstruction2 == ''%>
          <tr align="right" style="font-size: 9px;">
            <td style="font-size: 9px;"><%= consignment.SpecialInstruction2%></td>
          </tr>
        <% end %>
        <% unless consignment.SpecialInstruction3 == ''%>
          <tr align="right" style="font-size: 9px;">
            <td style="font-size: 9px;"><%= consignment.SpecialInstruction3%></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <p style="font-size: 9px;">For any queries please contact Untapped Fine Wines: 0396769663 or customerservice@untappedwines.com</p>
  </div>
  <div class="row">
    <table class="table table-striped table-bordered table-hover table-responsive">
      <thead style="font-size: 9px;">
        <th style="font-size: 9px;">Date</th>
        <th style="font-size: 9px;">Franchise</th>
        <th style="font-size: 9px;">Status</th>
        <th style="font-size: 9px;">Comment</th>
      </thead>
      <%item.traces.order('UploadDate ASC').each do |scan|%>
        <tr style="font-size: 9px;">
          <td style="font-size: 9px;"><%= scan.Date.to_s(:db)%></td>
          <td style="font-size: 9px;"><%= scan.Franchise%></td>
          <td style="font-size: 9px;"><%= scan.StatusDescription%></td>
          <td style="font-size: 9px;"><%= scan.comment%></td>
        </tr>
      <% end %>
    </table>
  </div>
  <% signature = item.traces.select{ |x| x.StatusDescription == 'Signature Obtained'}.first%>
  <% unless signature.nil?%>
    <div class="row">
      <table class="table table-striped table-bordered table-hover table-responsive">
        <thead style="font-size: 9px;">
          <th style="font-size: 9px;">Signature</th>
          <th style="font-size: 9px;">Company</th>
          <th style="font-size: 9px;">Receiver</th>
          <th style="font-size: 9px;">Address</th>
          <th style="font-size: 9px;">Comment</th>
        </thead>
        <tbody>
          <tr style="font-size: 9px;">
            <td style="font-size: 9px;"><%= image_tag "#{signature.Signature}"%></td>
            <td style="font-size: 9px;"><%= signature.company%></td>
            <td style="font-size: 9px;"><%= signature.contactName%></td>
            <td style="font-size: 9px;"><%= signature.address1.to_s + "\n" + signature.address2 + "\n" + signature.address3%>
              <br/>
                <%= signature.address4.to_s + "\n" + signature.address5.to_s + "\n" + signature.address6.to_s%>
            </td>
            <td style="font-size: 9px;"><%= signature.comment%></td>
          </tr>
        </tbody>
      </table>
    </div>
  <% end %>
</div>

<h3><center><%= @page_header %></center></h3>

<table class = "table table-striped table-bordered table-hover table-responsive">
	<tr>
		<th>Sales Rep</th>
		<th>Date</th>
		<th>Order Id</th>
		<th>Customer</th>
		<th>Status</th>
		<th>Product Qty</th>
		<th>Qty</th>
		<th>Order Total</th>
	</tr>

	<% @result.each do |r| %>

		<tr>
			<td><%= r[0] %></td>
			<td><%= r[1] %></td>
			<td><%= link_to r[2], action: "view_products_for_orderid", order_id: r[2] %></td>
			<td><%= link_to r[3], action: "view_orders_for_customer", customer_id: r[7] %></td>
			<td><%= @status_name %></td>
			<td class="num"><%= r[4] %></td>
			<td class="num"><%= r[5] %></td>
			<td class="num"><%= number_with_delimiter(number_with_precision(r[6], precision: 2)) %></td>
		</tr>

	<% end %>

</table>

<%= title @customer_name %>
<h3><%= @customer_name %></h3>

<center><%= link_to "Edit", controller: 'models', action: 'edit_customer', customer_id: @customer_id %></center>

<button class="button" style="float: right;margin-top:-60px;margin-right:30px;"><%= link_to "Top Products", controller: 'sales', action: 'top_products_for_customer', customer_id: @customer_id, customer_name: @customer_name %></button>

<div style="margin-top: 50px;">
<%= form_tag({:action => "orders_and_stats_for_customer" }, {:method => "get"}) do %>
	<%= render "partials/overall_stats", time_periods_name: @time_periods_name, sum_stats: @sum_stats, avg_stats: @avg_stats, monthly_supply_display_class: "none", monthly_supply: [] %>

	<%= hidden_field_tag :customer_id, @customer_id %>
   	<%= hidden_field_tag :customer_name, @customer_name %>

<% end %>
</div>

<%= render "partials/order", orders: @orders, display_class: "none" %>
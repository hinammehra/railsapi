<h3><center><%= @page_header %></center></h3>

<table class = "table table-striped table-bordered table-hover table-responsive">
	<tr>
		<th>Sales Rep</th>
		<th>Order Id</th>
		<th>Customer</th>
		<th>Status</th>
		<th>Qty</th>
		<th>Total</th>
	</tr>

	<tr>
		<td><%= @order.customer.staff.nickname %></td>
		<td><%= link_to @order.id, action: "view_products_for_orderid", order_id: @order.id %></td>
		<td><%= link_to get_customer_name(@order.customer), action: "view_orders_for_customer", customer_id: @order.customer_id %></td>
		<td><%= @order.status.name %></td>
		<td class="num"><%= @order.qty %></td>
		<td class="num"><%= number_with_delimiter(number_with_precision(@order.total_inc_tax, precision: 2)) %></td>
	</tr>
</table>

<br/><br/>
<table class = "table table-striped table-bordered table-hover table-responsive">
	<tr>
		<th>Product Name</th>
		<th>Quantity</th>
		<th>List Price Ex Tax</th>
		<th>Price Inc Tax</th>
		<th>Total</th>
	</tr>


<% @order.order_products.each do |op| %>
	<tr>
		<td><%= link_to op.product.name, action: "view_orders_for_product_and_customer", product_id: op.product_id, customer_id: @order.customer_id, product_name: op.product.name, customer_name: get_customer_name(@order.customer) %></td>
		<td class="num"><%= op.qty %></td>
		<td class="num"><%= op.product.calculated_price %></td>
		<td class="num"><%= number_with_delimiter(number_with_precision(op.price_inc_tax, precision: 2)) %></td>
		<td class="num"></td>
	
	</tr>
<% end %>
</table>

<div class="well panel-default panel" style="margin-top:20px;margin-left:100px;width:30%;float:left;">
  <h4 class="panel-heading">Customer Notes</h4>
  <div class="panel-body"><%= @order.customer_notes %></div>
</div>

<div class="well panel-default panel" style="margin-top:20px;margin-left:200px;width:30%;float:left;">
  <h4 class="panel-heading">Staff Notes</h4>
  <div class="panel-body"><%= @order.staff_notes %></div>
</div>

<h3><center>Product Stats for <%= link_to @customer_name, action: "view_orders_for_customer", customer_id: @customer_id %></center></h3>
<table class = "table table-striped table-bordered table-hover table-responsive">

	<tr class="info">
		<th>Product Name</th>
		<% @time_periods.each do |t| %>
			<th><%= t.name %></th>
		<% end %>
	</tr>

	<% @product_id_name_map_sorted.each do |id, name| %>
		<tr>
			<td><%= link_to name, action: "view_orders_for_product_and_customer", customer_id: @customer_id, customer_name: @customer_name, product_name: name, product_id: id %></td>
			<% values = check_id_in_map(@product_stats, id) %>
			<% values.each do |v| %>
				<td class="num"><%= v %></td>
			<% end %>
		</tr>
	<% end %>

</table>
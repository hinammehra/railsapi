<%= link_to '<i class="far fa-sticky-note" title="Add Follow-up Note"></i>'.html_safe, 
    controller: "activity", action: "add_note", note_id: task.id %>

<%= link_to '<i class="fas fa-plus" title="Add Follow-up Task"></i>'.html_safe, 
    controller: "activity", action: "add_activity", note_id: task.id %>

<% if task.expired == 1%>
    <%= link_to '<i class="fas fa-redo-alt" title="Re-Active"></i>'.html_safe, 
        controller: "task", action: "task_update", task_id: task.id, task_type: "reactive" %>
<% else %>
    <%= link_to '<i class="far fa-check-square" title="Completed" style="color: blue;"></i>'.html_safe, 
        controller: "activity", action: "add_note",note_id: task.id, 
        task_type: "completed" if (task.completed_date.nil? && (task.is_task == 1)) %>

    <%= link_to '<i class="far fa-trash-alt" title="Expired"></i>'.html_safe, 
        controller: "task", action: "task_update",task_id: task.id, task_type: "expired" %>

    <%= link_to '<i class="far fa-edit" title="Edit!"></i>'.html_safe, 
        controller: "activity", action: "activity_edit", note_id: task.id %>
<% end %>

<%= title 'Zomato Restaurant List'%>
<div class="row">
	<div class="col-12">
		<div class="card">
		  	<div class="card-header text-center h3 text-secondary">
				Zomato
				<p class="h5 mt-2">
                    <%= link_to "Incomplete Customers", {action: 'incomplete_customers'}, 
                        class: "btn btn-outline-primary text-info" %>
                    <%= link_to "View My Customers", {action: 'all', 
                        staff: ({id: session[:user_id]} unless current_user_sales?(session[:authority]))}, 
                        class: "btn btn-outline-primary text-info" %>
				</p>
		  	</div>
            <div class="card-body">
                <%= form_tag({controller: "customer", action: 'zomato'}, 
                    {:method => "get", class: "form-inline justify-content-center"}) do %>
    	 	 	
                    <%= render "partials/zomato_filter" %>
                    <%= label(:cuisine_selection, 'Select Cuisine', class: 'btn btn-primary mr-2')%>
                    <%= submit_tag "Filter", class: 'btn btn-primary' %>
                
                    <div class="card-footer cuisine-list mt-3" style="display: none;">
                        <%= render "customer_partials/cuisines" %>
                        <div class="input-group mt-3">
                            <%= text_field_tag('suburb', '', placeholder: 'Include suburb', 
                                    class: 'form-control') %>
                            <div class="input-group-append">
                                <%= submit_tag "Include", class: 'btn btn-primary' %>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>

<!-- BEGIN: zomato list -->
<%= render 'customer_partials/zomato_list', zomatos: @zomato%>
<!-- END: zomato list -->

<script type="text/javascript">
    $('label[for*=cuisine_selection]').click(function(){
        $('.cuisine-list').toggle();
    });
</script>
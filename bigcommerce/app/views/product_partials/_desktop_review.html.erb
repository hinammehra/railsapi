<div class="row">
    <div class="col-12">
        <div class="card">
            <%= form_tag({:controller => 'product', :action => 'warehouse_review'}, {:method => "get"}) do %>
                <div class="card-header text-center h3 text-secondary">
                    Inventory Review
                </div>
                <div class="card-body">
                    <div style="position: relative; overflow-y: scroll; height: 800px;">
                         <table class="reference-table table table-striped table-bordered 
                    table-hover table-responsive w-100 d-block d-table">
                            <thead>
                                <tr class="text-center">
                                    <th colspan="2"></th>
                                    <th colspan="7">Current</th>
                                    <th colspan="6">Count</th>
                                    <th colspan="4">Distribute</th>
                                    <th colspan="3"></th>
                                </tr>
                                <tr class="text-center">
                                    <th>NoWS#</th>
                                    <th style="min-width: 300px">Name</th>
                                    <th>DM</th>
                                    <th>VC</th>
                                    <th>Retail</th>
                                    <th>WS</th>
                                    <th>OnOrder</th>
                                    <th>Allocated</th>
                                    <th>Total</th>
                                    <th>Size</th>
                                    <th>Packs</th>
                                    <th>Loose</th>
                                    <th>Sample</th>
                                    <th>Total</th>
                                    <th>Difference</th>
                                    <th>DM</th>
                                    <th>VC</th>
                                    <th>Retail</th>
                                    <th>WS</th>
                                    <th>Date</th>
                                    <th>Staff</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <% @warehouse_reviews.each do |warehouse_count|%>
                                <%= fields_for "warehouse[#{warehouse_count.id}]",
                                warehouse_count do |warehouse| %>
                                    <%= warehouse.hidden_field :id %>
                                    <%= warehouse.hidden_field :product_no_ws_id %>
                                    <tr>
                                        <td class="align-middle">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text">
                                                        <%= check_box_tag 'selected_product[]', warehouse_count.id, 
                                                            false, class: "product_checkbox" %>
                                                    </div>
                                                    <div class="input-group-append">
                                                        <div class="input-group-text">
                                                            <%= warehouse_count.product_no_ws_id%>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <%= warehouse_count.product_name%>
                                        </td>
                                        <td class="align-middle">
                                            <%= warehouse_count.current_dm if warehouse_count.current_dm>0 %>
                                        </td>
                                        <td class="align-middle">
                                            <%= warehouse_count.current_vc if warehouse_count.current_vc>0 %>
                                        </td>
                                        <td class="align-middle">
                                            <%= warehouse_count.current_retail if warehouse_count.current_retail>0 %>
                                        </td>
                                        <td class="align-middle">
                                            <%= warehouse_count.current_ws if warehouse_count.current_ws>0 %>
                                        </td>
                                        <td class="align-middle">
                                            <%= warehouse_count.on_order %>
                                        </td>
                                        <td class="align-middle">
                                            <%= warehouse_count.allocation %>
                                        </td>
                                        <td class="align-middle">
                                            <%= warehouse_count.current_stock %>
                                        </td>
                                        <td class="align-middle">
                                            <%= warehouse_count.count_size %>
                                        </td>
                                        <td class="align-middle">
                                            <%= warehouse_count.count_pack %>
                                        </td>
                                        <td class="align-middle">
                                            <%= warehouse_count.count_loose %>
                                        </td>
                                        <td class="align-middle">
                                            <%= warehouse_count.count_sample %>
                                        </td>
                                        <td class="align-middle">
                                            <%= warehouse_count.count_total %>
                                        </td>
                                        <td class="align-middle" style="color:red;">
                                            <%= warehouse_count.difference%>
                                        </td>
                                        <td class="align-middle">
                                            <%= warehouse.text_field :count_dm, size: 5, class: "stock-modification  form-control p-1 text-center", style: "min-width: 50px" if warehouse_count.current_dm>0%>
                                        </td>
                                        <td class="align-middle">
                                            <%= warehouse.text_field :count_vc, size: 5, class: 'stock-modification  form-control p-1 text-center', style: "min-width: 50px" if warehouse_count.current_vc>0%>
                                        </td>
                                        <td class="align-middle">
                                            <%= warehouse.text_field :count_retail, size: 5, class: 'stock-modification  form-control p-1 text-center', style: "min-width: 50px" if warehouse_count.current_retail>0%>
                                        </td>
                                        <td class="align-middle">
                                            <%= warehouse.text_field :count_ws, size: 5, defualt: 0, class: 'stock-modification  form-control p-1 text-center', style: "min-width: 50px" %>
                                        </td>
                                        <td class="align-middle">
                                            <%= warehouse_count.count_date.strftime('%d/%m %H:%M')%>
                                        </td>
                                        <td class="align-middle">
                                            <%= warehouse_count.creator.nickname %>
                                        </td>
                                        <td class="align-middle">
                                        </td>
                                    </tr>

                                    <% products = Product.where(product_no_ws_id: warehouse_count.product_no_ws_id) %>
                                    <tr>
                                        <td colspan="5">
                                        </td>
                                        <td style="color: orange;">Now:
                                        </td>
                                        <td style='color: red;'>
                                            <%= OrderProduct.on_order(products.map(&:id)).map(&:qty).sum%>
                                        </td>
                                        <td style='color: red;'>
                                            <%= OrderProduct.allocation_products(products.map(&:id)).map(&:qty).sum%>
                                        </td>
                                        <td style='color: red;'>
                                            <%= products.sum(:inventory)%>
                                        </td>
                                        <td colspan="5">
                                        </td>
                                        <td style="color: orange;" class="different-now">
                                        </td>
                                        <td colspan="2">Recommend:
                                        </td>
                                        <td class="rec-retail">
                                            <%= (warehouse_count.count_total*0.1).to_i unless warehouse_count.count_total.nil? %>
                                        </td>
                                        <td class="rec-ws">
                                            <%= warehouse_count.count_total - (warehouse_count.count_total*0.1).to_i unless warehouse_count.count_total.nil? %>
                                        </td>
                                        <!-- <td><a class="btn btn-primary optimise">Optimise</a></td> -->
                                    </tr>
                                <% end %>
                            <% end %>
                        </table>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <%= submit_tag "Confirm!",class: 'btn btn-primary'%>
                </div>
            <% end %>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).on('input', '.stock-modification', function(){
        var different = 0;
        var stock_change = $(this).parent().parent().find('.stock-modification');
        for(var i = 0; i < stock_change.length; i++){
            different += parseInt(stock_change.val());
        }

        $(this).parent().parent().next("tr").find('.different-now').html(different);
    });

    $(document).on('click', '.optimise', function(){
        var retail = parseInt($(this).parent().find('.rec-retail').html());
        var ws = parseInt($(this).parent().find('.rec-retail').html());
    });
</script>

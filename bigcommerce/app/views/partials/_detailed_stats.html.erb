<table class = "table table-striped table-bordered table-hover table-responsive">
	<tr class="info">
		<th><%= column_name %></th>
		<th class = <%= display_class %> ><%= column_name_optional %></th>
		<% time_periods_name.each do |t| %>
			<th><%= t %></th>
		<% end %>
	</tr>

	<% names.each do |id, name| %>
	<tr>
		<%#= For Product Stats that have hash like {id => name} %>
		<td class = <%= display_class_otherwise %> ><%= name %></td>

		<%#= For Customer Stats that have hash like {id => [name, staff]} %>
		
		<td class = <%= display_class %> ><%= name[0] %></td>
		<td class = <%= display_class %> ><%= name[1] %></td>
		<% stats.each do |time_period_name, hash| %>
		<td><%= exists_in_h(hash, id) %></td>
		<% end %>
	</tr>
	<% end %>

</table>
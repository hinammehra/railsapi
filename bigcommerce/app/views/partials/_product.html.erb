<%= render "partials/paginate", objects: @product_ids %>

<table class = "table table-striped table-bordered table-hover table-responsive">
	<tr>
		<th>ID</th>
		<th>Product Name <%= render "partials/sort_arrows", order: 0 %></th>
		<th>Price ( Ex GST ) <%= render "partials/sort_arrows", order: 1 %></th>
		<th>Stock <%= render "partials/sort_arrows", order: 2 %></th>
		<th>Pending Stock</th>
		<th>Total Stock</th>
	</tr>


	<% @product_ids.each do |id| %>
		<tr>
			<td><%= id %></td>

			<td><%= link_to @name_h[id], controller: 'product', action: 'summary',\
			product_id: id, product_name: @name_h[id], transform_column: @transform_column,\
			total_stock: @pending_stock_h[id].to_i + @stock_h[id].to_i, pending_stock: @pending_stock_h[id].to_i %></td>

			<td class="num"><%= display_num(@price_h[id]) %></td>
			<td clas = "num" ><%= @stock_h[id] %></td>
			<% if @pending_stock_h[id].to_i != 0 && ('product_id'.eql? @transform_column) %>
				<td><%= link_to @pending_stock_h[id].to_i, controller: 'status', action: 'summary_with_product',\
				status_id: '1', status_name: 'Pending',\
				product_id: id, product_name: @name_h[id],\
				num_orders: Order.status_filter("1").order_product_filter(id).group_by_product_id.count_order_id_from_order_products,\
				qty: @stock_h[id], status_qty: @pending_stock_h[id], total: @pending_stock_h[id].to_i + @stock_h[id].to_i %></td>
			<% else %>
				<td clas = "num" ><%= @pending_stock_h[id].to_i %></td>
			<% end %>
			<td clas = "num" ><%= @pending_stock_h[id].to_i + @stock_h[id].to_i %></td>
		</tr>

	<% end %>

</table>

<span style="float:right;">
<%= paginate(@product_ids) %>
</span>

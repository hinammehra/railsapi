<span style="float:right;margin-right:50px;font-size: 115%;"><%= paginate(products) %></span>

<table class = "table table-striped table-bordered table-hover table-responsive">
	<tr>
		<th>Product Name</th>
		<th>Price ( Ex GST )</th>
		<th>Stock</th>
		<th>Pending Stock</th>
		<th>Total Stock</th>
	</tr>

	<% products.each do |p| %>
	<tr>
		<td><%= link_to p.name, controller: 'sales', action: 'stats_and_top_customers_for_product', product_id: p.id, product_name: p.name %></td>
		<td class="num"><%= display_num(calculate_product_price(p.calculated_price, p.retail_ws)) %></td>
		<td class="num"><%= p.inventory %></td>

		<% pending_stock = exists_in_h(pending_stock_h, p.id) %>
		<td class="num"><%= pending_stock %></td>
		<td class="num"><%= convert_empty_string_to_int(pending_stock) + p.inventory %></td>
	</tr>

	<% end %>

</table>

<span style="float:right;margin-right:50px;font-size: 115%;"><%= paginate(products) %></span>

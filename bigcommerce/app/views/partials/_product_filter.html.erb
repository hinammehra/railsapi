<!-- Used in Products all page -->
<%= text_field_tag('search', @search_text, placeholder: 'Search product by name', 
    class: 'form-control mr-2') %>

<%= collection_select(:producer_country, :id, 
    (@products.nil?) ? ProducerCountry.all : ProducerCountry.producer_country_filter(
        @products.map(&:producer_country_id)
    ), :id, :name, {:include_blank => 'All Countries'}, 
    {:class => 'form-control mr-2'}) %>

<%= collection_select(:product_sub_type, :id, 
    (@products.nil?) ? ProductSubType.all : ProductSubType.product_sub_type_filter(
        @products.map(&:product_sub_type_id)
    ), :id, :name, {:include_blank => 'All Varietals'}, 
    {:class => 'form-control mr-2'}) %>

<div class="row ml-0">
    <div class="col form-check form-check-inline">
        <%= radio_button_tag :transform_column, "product_id", 
            @checked_id, class: "form-check-input" %>
        <label class="form-check-label">Products</label>
    </div>
    <div class="col form-check form-check-inline">
        <%= radio_button_tag :transform_column, "product_no_ws_id", 
            @checked_no_ws, class: "form-check-input" %>
        <label class="form-check-label">Vintages</label>
    </div>
    <div class="col form-check form-check-inline">
        <%= radio_button_tag :transform_column, "product_no_vintage_id", 
            @checked_no_vintage, class: "form-check-input" %>
        <label class="form-check-label">Wines</label>
    </div>
</div>

<%= submit_tag "Submit", class: 'btn btn-primary mr-2' %>

<%= link_to "Reset", { action: "products" }, class: "btn btn-primary mr-2" %>

<%  if @checked_no_ws %>
        <%= submit_tag "Update", class: 'btn btn-primary'%>
<% end %>

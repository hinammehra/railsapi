<% if objects.count >= @per_page.to_i %>
	<script type="text/javascript">
		function load(selected){
			window.location.search = window.location.search + '&per_page=' + selected.val();
		};
	</script>

	<!-- start pagination -->
    <div class="form-group row justify-content-center mt-3 mb-0">
        <div class="col-xs">
            <%= will_paginate objects,
                renderer: WillPaginate::ActionView::BootstrapLinkRenderer, 
                previous_label: '&laquo;', next_label: '&raquo;',
                list_classes:  %w(pagination pagination-sm) %>
        </div>
        <div class="col-xs">
            <div class="input-group pb-3">
                <div class="input-group-append">
                    <span class="input-group-text form-control-sm">
                        Per page
                    </span>
                    <%= select_tag :per_page, 
                        options_for_select([15,30,50,100], @per_page.to_i), 
                        :onchange => "load($(this).find('option:selected'))", 
                        :class => "form-control form-control-sm"
                    %>
                </div>
            </div>
		</div>
	</div>
	<!-- end pagination -->
<% end %>

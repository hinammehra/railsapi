<table class="table table-striped table-bordered table-hover table-responsive w-100 d-block d-table">
    <thead>
        <tr class="info activity-bar">
          <th colspan="2"><%= table_name %></th>
          <th>Note</th>
          <th style="width:120px">Due</th>
        </tr>
    </thead>

    <!-- BEGIN: Display tasks list -->
    <tbody class="activity-section">
        <% activities.each do |task|%>
            <tr class="activity_tr staff_<%= task.staff.id %> method_<%= task.method %> 
                subject_<%= task.subject_1 %> function_<%= task.function %>">
                <td style="border-right: 0px; width: 150px">
                    <%= task.start_date.strftime("%d/%m/%Y")%> <br/>
                    <%= task.staff.nickname%>
                </td>
                <td style="border-left: 0px; width: 210px">
                    <%= @subjects.select {|x| x.id.to_s==task.subject_1}.map(&:subject).first%> <br/>
                    <%= task.method%>
                <td>
                    <%= link_to task.description.to_s[0..200],controller: "activity", 
                        action: "activity_edit", note_id: task.id%>
                        <%= '...' if task.description.to_s.length > 200%>
                </td>
                <td>
                    <%= task.end_date.strftime("%d/%m/%y") if task.is_task == 1%>
                </td>
            </tr>
        <% end %>
    </tbody>
    <!-- END: Display tasks list -->
</table>

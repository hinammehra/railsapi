<%= title 'Link Leads to Customers'%>
<div class="row">
	<div class="col-12">
		<div class="card">
		  	<div class="card-header text-center h3 text-secondary">
				Leads - customers
		  	</div>
	 	 	<div class="card-body text-center">
                <%= link_to "All lead", {action: 'all_leads'}, 
                    class: "btn btn-outline-primary text-info" %>
            </div>
        </div>
    </div>
</div>

<!-- BEGIN: leads - customers list -->
<table class = "table table-striped table-bordered table-hover table-responsive">
    <tr>
      <th>Lead Name</th>
      <th>Lead Address</th>
      <th>Customer Name</th>
      <th>Customer Address</th>
    </tr>
    <% @leads.each do |lead| %>
    <tr>
      <td><%= link_to lead.lead_name, controller: 'lead', action: 'summary', lead_id: lead.lead_id%></td>
      <td><%= lead.address %></td>
      <td><%= link_to lead.customer_name, controller: 'customer', action:'summary', customer_id: lead.customer_id, customer_name: lead.customer_name%></td>
      <td><%= lead.customer_address%></td>
      <td><%= link_to '<i class="far fa-thumbs-up" title="Match" style="color: blue;"></i>'.html_safe, controller: 'lead', action: 'turn_customer', lead_id: lead.lead_id, customer_id: lead.customer_id%></td>
    </tr>
    <% end %>
</table>

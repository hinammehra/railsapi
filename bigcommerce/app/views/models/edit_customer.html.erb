<%= title "Edit #{@customer_name}"%>
<h3>Edit <%= @customer_name %></h3>
<br/>

<%= form_for @customer, url: {action: "update_customer"}, method: "POST", html: {class: "form-group", style: "padding-left: 50px;"} do |f| %>

  <%= f.hidden_field :id %>

  <%= f.label :firstname, class: 'margin-from-top label-new' %>
  <%= f.text_field :firstname, class: 'form-control quarter-size' %>
  <%= f.label @customer.cust_type.name, class: 'form-control quarter-size label-new' %>
  <br/><br/>

  <%= f.label :lastname, class: 'margin-from-top label-new' %>
  <%= f.text_field :lastname, class: 'form-control quarter-size' %>
  <br/><br/>

  <%= f.label :actual_name, class: 'margin-from-top label-new' %>
  <%= f.text_field :actual_name, class: 'form-control quarter-size' %>
  <br/><br/>

  <%= f.label :staff, class: 'margin-from-top label-new' %>
  <%= f.collection_select :staff_id, Staff.active_sales_staff, :id, :nickname, {selected: @customer.staff_id}, {class: "form-control quarter-size"} %>
  <br/><br/>

  <%= f.label :channel, class: 'margin-from-top label-new' %>
  <%= f.collection_select :cust_style_id, CustStyle.all, :id, :name, {:selected => @customer.cust_style_id, :include_blank => 'Not Assigned'}, {class: "form-control quarter-size"} %><br/><br/>

  <%= f.label :group, class: 'margin-from-top label-new' %>
  <%= f.collection_select :cust_group_id, CustGroup.all, :id, :name, {:selected => @customer.cust_group_id, :include_blank => 'Not Assigned'}, {class: "form-control quarter-size"} %><br/><br/>


  <%= f.submit "Update", class: 'btn btn-primary' %>
<% end %>

<p style="padding-left: 50px;"><%= link_to "Go Back to Customer Profile", controller: 'sales', action: 'orders_and_stats_for_customer', customer_id: @customer.id, customer_name: @customer_name %></p>
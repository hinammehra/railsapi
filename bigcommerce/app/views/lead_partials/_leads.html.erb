

<table class = "table table-striped table-bordered table-hover table-responsive">
	<tr>
		<th>Sales Rep <%= render "partials/sort_arrows", order: 'order_by_staff' %></th>
		<th>Name <%= render "partials/sort_arrows", order: 'order_by_name' %></th>
		<th>Type <%= render "partials/sort_arrows", order: 'order_by_type' %></th>
		<th>Channel <%= render "partials/sort_arrows", order: 'order_by_style' %></th>
		<th>Address</th>
	</tr>

	<% leads.each do |l| %>
	<tr>
		<td><%=@staffs.find(l.staff_id).nickname%></td>
		<td><%= link_to l.actual_name, controller: 'lead', action: 'edit_leads', lead_id: l.id, lead_name: l.actual_name %></td>

		<td><%= customer_type_name(l) %></td>
		<td><%= customer_style_name(l) %></td>
		<td><%= l.address%></td>
	</tr>
	<% end %>

</table>

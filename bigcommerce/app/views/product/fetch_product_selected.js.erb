var current_colour = '<%= (@product.selected==0) ? "grey" : "red" %>';
var last_colour = 'greyred'.replace(current_colour, '');

flags.filter('[product=<%= @product.id %>]').removeClass(last_colour).addClass(current_colour);
checkboxes.filter('#selected_product_<%= @product.id%>').prop('checked', <%= @product.selected==0 ? false : true %>);

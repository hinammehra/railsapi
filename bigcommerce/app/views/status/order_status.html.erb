<%= title 'Order Status' %>
<h3 id="orders-view-heading">Manage Orders</h3>

<%= form_tag({:controller => "status", :action => "status_check"}, {:method => "get"}) do %>
<div class="form-group" style="margin-top:20px;">
  <div class="row">
    <div class="col-md-6">
        <%= text_field_tag('search', @search_text, placeholder: 'Search for Customer Name', size: 80) %>
        <%= submit_tag "Filter", class: 'btn btn-primary' %>
    </div>
    <div class="col-md-4 col-md-offset-2" style="margin-top: -5px;">
      <div class="col-xs-4"><%= link_to label(:status, 'Approve'), controller: 'status', action: 'status_check', status_name: 'Approve'%></div>
      <div class="col-xs-4"><%= link_to label(:status, 'Picking'), controller: 'status', action: 'status_check', status_name: 'Picking'%></div>
      <div class="col-xs-4"><%= link_to label(:status, 'Courier'), controller: 'status', action: 'status_check', status_name: 'Courier'%></div>
      <div class="col-xs-4"><%= link_to label(:status, "Problem"), controller: 'status', action: 'status_check', status_name: 'Problem' %><%= '(' + Order.joins(:status).where('statuses.send_reminder = 1').count.to_s + ')'%></div>
      <div class="col-xs-4"><%= link_to label(:status, 'Shipped'), controller: 'status', action: 'status_check', status_name: 'Shipped'%></div>
      <div class="col-xs-4"><%= link_to label(:status, 'Delivered'), controller: 'status', action: 'status_check', status_name: 'Delivered'%></div>
    </div>
  </div>
</div>
<br/>

  <div class="order_table">
    <%= render "partials/order_status", orders: @orders, display_class: "none", product_ids: nil%>
  </div>

<% end %>

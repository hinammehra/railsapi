<table class = "table table-striped table-bordered table-hover table-responsive product-table">
  <thead>
    <tr>
      <th colspan="4">Allocation Order</th>
    </tr>
    <tr>
      <th>Product ID</th>
      <th>Product Name</th>
      <th>QTY</th>
      <th>Rivision Date</th>
    </tr>
  </thead>
  <% order.order_products.select{|x| x.qty > 0}.each do |op|%>
    <tr class="allocated-product" product-id="<%= op.product_id%>-allocated" inventory="<%= op.qty %>" name="<%= op.product.name%>" qty="<%= op.qty%>" price="<%= op.product.calculated_price*1.29%>">
      <td><%= op.product_id%></td>
      <td><%= op.product.name%></td>
      <td class="allocated_<%= op.product_id%>"><%= op.qty%></td>
      <td><%= op.revision_date.strftime('%d/%m/%Y') unless op.revision_date.nil?%></td>
    </tr>
  <% end %>
</table>
